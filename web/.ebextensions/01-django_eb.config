    PYTHONPATH: "/opt/python/current/app/django_eb:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: "web/wsgi.py"

container_commands:
  01_migrate:
    command: "django-admin.py migrate --noinput"
    leader_only: true